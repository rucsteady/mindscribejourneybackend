<div class="w3-container w3-content w3-padding-64" style="max-width: 800px;">
  <h2 class="w3-wide w3-center">SUBSCRIBER TABLE</h2>
  <p class="w3-opacity w3-center"><i>subscriber profile</i></p>

  <div class="w3-row w3-center" style="font-size: large;">
    <br /><br /><br />
    <h1>Subscriber Data for <%= subscriber.name %></h1>
    <div>
      <br />
      <table class="table" style="margin: auto;">
        <tr>
          <th>Name</th>
          <td><%= subscriber.name %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= subscriber.email %></td>
        </tr>
        <tr>
          <th>Zip Code</th>
          <td><%= subscriber.zipCode %></td>
        </tr>
      </table>
      <h4>
        This subscriber has <%= subscriber.likes.length %> associated like(s)
      </h4>

      <div>
        <a href="/subscribers">View all subscribers</a>
      </div>

      <div>
        <a href="<%=`/subscribers/${subscriber._id}/edit`%>">
          Edit Subscriber Details
        </a>
      </div>

      <div>
        <a
          href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
          onclick="return confirm('Are you sure you want to delete this record?')"
          >Delete</a
        >
      </div>
     
      
      
    </div>
  </div>
</div>
