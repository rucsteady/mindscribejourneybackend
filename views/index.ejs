<div
  class="w3-container w3-content w3-padding-64"
  style="max-width: 800px;"
  id="contact"
>
  <h2 class="w3-wide w3-center">TODAY I LIKE</h2>
  <p class="w3-opacity w3-center"><i>tell us what you like.</i></p>

  <div class="w3-row w3-padding-32">
    <div class="w3-col" style="margin: auto;">
      <form action="/likes/create" method="POST">
        <div class="w3-row-padding" style="margin: 0 0 0 -2px;">
          <h1>my name is        
            
              <% if (loggedIn) { %>              
                <a href="<%=`/users/${currentUser._id}`%>">
                  <%= currentUser.fullName %></a>              
               
              
              <%} else {%>
             
                <a href="/users/login">Log In</a>
              
              <% } %>
            </h1>  
            </div>
          <h1>today i like</h1>
          <input
            class="w3-input w3-border"
            type="text"
            placeholder="like..."
            required
            name="name"
          />
          <button
            class="w3-button w3-white w3-section"
            type="submit"
            name="submit"
          >
            SEND
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
