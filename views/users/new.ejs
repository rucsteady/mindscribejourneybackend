<!-- The new user Section -->
<div
  class="w3-container w3-content w3-padding-64"
  style="max-width: 800px;"
  id="newUser"
>
  <h2 class="w3-wide w3-center">USER CREATE</h2>
  <p class="w3-opacity w3-center"><i>Create a new user:</i></p>
  <div class="w3-row w3-padding-32">
    <div class="w3-col m6" style="width: 100%;">
      <form action="/users/create" method="POST">
        <div class="w3-row-padding" style="margin: 0 -16px 8px -16px;">
          <div class="w3-center">
            <label for="inputFirstName">First Name</label>
            <input
              class="w3-input w3-border"
              type="text"
              name="first"
              id="inputFirstName"
              placeholder="First"
              autofocus
            />
            <label for="inputLastName">Last Name</label>
            <input
              class="w3-input w3-border"
              type="text"
              name="last"
              id="inputLastName"
              placeholder="Last"
            />
            <label for="inputPassword">Password</label>

            <input
              class="w3-input w3-border"
              type="password"
              name="password"
              id="inputPassword"
              placeholder="Password"
              required
            />
            <label for="inputEmail">Email address</label>
            <input
              class="w3-input w3-border"
              type="email"
              name="email"
              id="inputEmail"
              placeholder="Email address"
              required
            />
            <label for="inputZipCode">Zip Code</label>
            <input
              class="w3-input w3-border"
              type="text"
              name="zipCode"
              id="inputZipCode"
              pattern="\d*"
              placeholder="Zip Code"
              required
            />
          </div>
        </div>

        <button class="w3-button w3-white w3-section w3-right" type="submit">
          SEND
        </button>
      </form>
    </div>
  </div>
</div>
